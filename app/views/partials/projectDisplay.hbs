<form action="/displayUpdatedProject" method="POST">
    <div class="uk-margin">
        <div class="uk-width-expand">
            <span class="uk-form-icon" uk-icon="icon: empty"></span>
            <h4>Title</h4>
            <input class="uk-input uk-form-large" type="text" name="title" value="{{title}}">
        </div>
        <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: empty"></span>
            <h4>Background</h4>
            <input class="uk-input uk-form-large" type="text" name="background" value="{{background}}">
        </div>
        <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: empty"></span>
            <h4>Problem Definition</h4>
            <input class="uk-input uk-form-large" type="text" name="problemDefinition" value="{{problemDefinition}}">
        </div>
        <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: empty"></span>
            <h4>Goals</h4>
            <input class="uk-input uk-form-large" type="text" name="goals" value="{{goals}}">
            <input type="hidden" value="{{id}}" name="id"/>
        </div>
        <div class="uk-inline uk-width-1-1">
            <span class="uk-form-icon" uk-icon="icon: empty"></span>
            <h4>Root Cause</h4>
            <h5>Man</h5>
            <input class="uk-input uk-form-large" type="text" name="man" value="{{man}}">

            <h5>Machine</h5>
            <input class="uk-input uk-form-large" type="text" name="machine" value="{{machine.[0]}}">
            <input class="uk-input uk-form-large" type="text" name="machine" value="{{machine.[1]}}">
            <input class="uk-input uk-form-large" type="text" name="machine" value="{{machine.[2]}}">
            <h5>Method</h5>
            <input class="uk-input uk-form-large" type="text" name="method" value="{{method.[0]}}">
            <input class="uk-input uk-form-large" type="text" name="method" value="{{method.[1]}}">
            <input class="uk-input uk-form-large" type="text" name="method" value="{{method.[2]}}">
            <h5>Environment</h5>
            <input class="uk-input uk-form-large" type="text" name="environment" value="{{environment.[0]}}">
            <input class="uk-input uk-form-large" type="text" name="environment" value="{{environment.[1]}}">
            <input class="uk-input uk-form-large" type="text" name="environment" value="{{environment.[2]}}">
            <h5>Measurement</h5>
            <input class="uk-input uk-form-large" type="text" name="measurement" value="{{measurement.[0]}}">
            <input class="uk-input uk-form-large" type="text" name="measurement" value="{{measurement.[1]}}">
            <input class="uk-input uk-form-large" type="text" name="measurement" value="{{measurement.[2]}}">
            <h5>Material</h5>
            <input class="uk-input uk-form-large" type="text" name="material" value="{{material.[0]}}">
            <input class="uk-input uk-form-large" type="text" name="material" value="{{material.[1]}}">
            <input class="uk-input uk-form-large" type="text" name="material" value="{{material.[2]}}">
        </div>

        <div class="uk-inline uk-width-1-1">
            <br><br>

        <table id="actionTable" border="1"  >
            <tr>
                <th>ID</th>
                <th>Issue</th>
                <th>Action</th>
                <th>Who</th>
                <th>When</th>
                <th>Status</th>
            </tr>
            {{#each splitActionPlan}}
                <tr>
                    {{#each this}}
                    <td><input class="uk-input uk-form-large" type="text" name="actionPlan" value="{{this}}"></td>
                    {{log @index}}
                    {{/each}}
                </tr>
            {{/each}}
        </table>
        </div>

        <div class="uk-margin">
            <div class="uk-inline uk-width-1-1">
                <span class="uk-form-icon" uk-icon="icon: update"></span>
                <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-3 uk-align-center">Update Project</button>
                <br>
            </div>
        </div>
    </div>
</form>
{{> error }}

