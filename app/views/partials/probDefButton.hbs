<div class="uk-margin uk-width-2xlarge uk-margin-auto uk-card uk-card-default uk-card-body uk-box-shadow-large">
    <form class="uk-form-stacked uk-text-left" action="/probDefButton" method="POST">
        <div class="uk-grid uk-grid-stack">
            <div class="uk-width-1-2@m">
                <div class="uk-margin">
                    <label class="uk-form-label" for="form-stacked-text">Title</label>
                    <div class="uk-inline uk-width-1-1">
                        <span class="uk-form-icon" uk-icon="icon: empty"></span>
                        <input class="uk-input uk-form-large" type="text" name="title" placeholder="Pick a Title for your Project">
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Background</label>
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: empty"></span>
                            <input class="uk-input uk-form-large" type="text"  name="background" placeholder="Why are we talking about it?">
                        </div>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Project Definition</label>
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: empty"></span>
                            <input class="uk-input uk-form-large" type="text"  name="problemDefinition" placeholder="Where do things stand today/What is the problem?">
                        </div>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-margin">
                        <label class="uk-form-label" for="form-stacked-text">Goals</label>
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: empty"></span>
                            <input class="uk-input uk-form-large" type="text"  name="goals" placeholder="What specific outcomes are required?">
                        </div>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: empty"></span>
                            <input class="uk-input uk-form-large uk-hidden" type="text"  name="rootCause" placeholder="What is the root cause of the problem?">
                        </div>
                    </div>
                </div>
                <div class="uk-margin">
                    <div class="uk-margin">
                        <div class="uk-inline uk-width-1-1">
                            <span class="uk-form-icon" uk-icon="icon: empty"></span>
                            <input class="uk-input uk-form-large uk-hidden" type="text"  name="actionPlan" placeholder="What activity is required to reach the target?">
                        </div>
                    </div>
                </div>
                <div class=" uk-width-1-2@m">
                    <div class="uk-margin">
                        <button class="submit uk-button uk-button-primary uk-button-large uk-width-1-1">Add Project</button>
                    </div>
                </div>
            </div>
    </form>
</div>
